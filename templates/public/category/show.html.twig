{% extends 'base.html.twig' %}

{% block title %}{{ category.title }} - Category Details{% endblock %}

{% block body %}
    <div class="container-sm p-5 my-5 w-75">
        <nav aria-label="breadcrumb" class="mb-4">
            <ol class="breadcrumb">
                <li class="breadcrumb-item"><a href="{{ path('app_home') }}">Home</a></li>
                <li class="breadcrumb-item"><a href="{{ path('app_category_index') }}">Categories</a></li>
                <li class="breadcrumb-item active" aria-current="page">{{ category.title }}</li>
            </ol>
        </nav>

        <div class="row">
            <div class="col-lg-12 mb-4">
                <div class="card shadow">
                    <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                        <h3 class="m-0">{{ category.title }}</h3>
                        <a href="{{ path('app_category_index') }}" class="btn btn-light btn-sm">
                            <i class="fas fa-arrow-left me-1"></i> Back to List
                        </a>
                    </div>
                    <div class="card-body">


                        <div class="mt-4">
                            <h4 class="mb-4">News in this Category</h4>

                            {% if category.news is defined and category.news|length > 0 %}
                                <div class="row row-cols-1 row-cols-md-2 row-cols-lg-3 g-4">
                                    {% for news in category.news %}
                                        <div class="col">
                                            <div class="card h-100">
                                                {% if news.pictureFilename %}
                                                    <img src="{{ vich_uploader_asset(news, 'pictureFile') | imagine_filter('thumbnail') }}"
                                                         class="card-img-top" alt="{{ news.title }}">
                                                {% else %}
                                                    <div class="card-img-top bg-light text-center py-5">
                                                        <i class="fas fa-newspaper fa-3x text-secondary"></i>
                                                    </div>
                                                {% endif %}

                                                <div class="card-body">
                                                    <h5 class="card-title">{{ news.title }}</h5>
                                                    {% if news.insertDate %}
                                                        <p class="card-text text-muted small">
                                                            <i class="far fa-calendar-alt me-1"></i>
                                                            {{ news.insertDate|date('F d, Y') }}
                                                        </p>
                                                    {% endif %}

                                                    {% if news.shortDescription %}
                                                        <p class="card-text">{{ news.shortDescription }}</p>
                                                    {% else %}
                                                        <p class="card-text">{{ news.content|striptags|slice(0, 150) }}{% if news.content|length > 150 %}...{% endif %}</p>
                                                    {% endif %}
                                                </div>
                                                <div class="card-footer bg-transparent">
                                                    <a href="{{ path('news_view', {'id': news.id}) }}" class="btn btn-sm btn-primary">Read more</a>
                                                </div>
                                            </div>
                                        </div>
                                    {% endfor %}
                                </div>
                            {% else %}
                                <div class="alert alert-info">
                                    No news articles found in this category.
                                </div>
                            {% endif %}
                        </div>
                    </div>

                </div>
            </div>
        </div>
    </div>
{% endblock %}