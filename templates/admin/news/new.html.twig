{% extends 'base.html.twig' %}

{% block title %}Create New News Article{% endblock %}

{% block body %}
    <div class="container-sm p-5 my-5 w-75">
        <h1 class="mt-4 mb-4">Create New News Article</h1>

        {% from 'macro/_alert.html.twig' import alert %}
        {% for label, messages in app.flashes %}
            {% for message in messages %}
                {{ alert(label, message) }}
            {% endfor %}
        {% endfor %}
        <div class="card shadow mb-4">

            {% from 'macro/_alert.html.twig' import alert %}
            {% for label, messages in app.flashes %}
                {% for message in messages %}
                    {{ alert(label, message) }}
                {% endfor %}
            {% endfor %}
            <div class="card-header">
                <h5 class="card-title m-0">Article Details</h5>
            </div>
            <div class="card-body">
                {{ form_start(form, {'attr': {'class': 'needs-validation', 'enctype': 'multipart/form-data'}}) }}

                <div class="mb-3">
                    {{ form_label(form.title) }}
                    {{ form_widget(form.title, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.title) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.shortDescription) }}
                    {{ form_widget(form.shortDescription, {'attr': {'class': 'form-control', 'rows': 3}}) }}
                    {{ form_errors(form.shortDescription) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.content) }}
                    {{ form_widget(form.content, {'attr': {'class': 'form-control'}}) }}
                    {{ form_errors(form.content) }}
                </div>

                <div class="mb-3">
                    {{ form_label(form.pictureFile) }}
                    {{ form_widget(form.pictureFile) }}
                    {{ form_errors(form.pictureFile) }}
                    <small class="form-text text-muted">Upload an image for this news article</small>
                </div>


                <div class="mb-4">
                    {{ form_label(form.categories) }}
                    <div class="categories-container row g-3">
                        {% for category in form.categories %}
                            <div class="col-md-3 col-sm-4 col-6">
                                <div class="form-check">
                                    {{ form_widget(category) }}
                                    {{ form_label(category) }}
                                </div>
                            </div>
                        {% endfor %}
                        {{ form_errors(form.categories) }}
                    </div>
                </div>

                {{ form_rest(form) }}

                <div class="d-flex justify-content-between">
                    <a href="{{ path('app_admin_news') }}" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                    <button type="submit" class="btn btn-success">
                        <i class="fas fa-save"></i> Create
                    </button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>
{% endblock %}
